{% extends "templates/default.njk" %}

{% block content %}
<h1>Exercises</h1>

<ul>
    {% for exercise in exercises %}
        <li><a href="/exercises/{{ exercise.exerciseID }}">{{ exercise.name }}</a></li>
    {% endfor %}
</ul>

{% if user.isTeacher %}
    <button data-bs-toggle="modal" data-bs-target="#create-exercise-modal">Create Exercise</button>
    <div class="modal" id="create-exercise-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <h2>Create Exercise</h2>
                <form action="/exercises/create" method="post">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name">

                    <label for="incentive">Incentive:</label>
                    <input type="text" id="incentive" name="incentive">

                    <label for="pointValue">Point Value:</label>
                    <input type="number" id="pointValue" name="pointValue">

                    <label for="classCode">Class Code:</label>
                    <select id="classCode" name="classCode">
                        {% for class in classes %}
                            <option value="{{ class.classCode }}">{{ class.className }}</option>
                        {% endfor %}
                    </select>

                    <button type="submit">Create</button>
                </form>
            </div>
        </div>
    </div>
{% endif %}

{% endblock %}
